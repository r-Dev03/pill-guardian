#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/r-dev/Documents/Dev/pill-guardian" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/r-dev/Documents/Dev/pill-guardian")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/r-dev/Documents/Dev/pill-guardian" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/r-dev/Documents/Dev/pill-guardian/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/r-dev/Documents/Dev/pill-guardian/.envrc" "/Users/r-dev/Documents/Dev/pill-guardian/.direnv"/*.rc
